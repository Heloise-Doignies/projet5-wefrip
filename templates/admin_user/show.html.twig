{% extends 'base-backend.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>
    <a href="{{ path('app_admin_user_index') }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="skip-back"></i></a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>AvatarName</th>
                <td>{{ user.avatarName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>UserSlug</th>
                <td>{{ user.userSlug }}</td>
            </tr>
            <tr>
                <th>UserUpdatedAt</th>
                <td>{{ user.userUpdatedAt ? user.userUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="edit-3"></i>modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}

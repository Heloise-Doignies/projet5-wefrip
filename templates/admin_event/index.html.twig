{% extends 'base-backend.html.twig' %}

{% block title %}Evénements{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Evénements</h1>
    <a href="{{ path('app_admin_event_new') }}" class="btn btn-primary"><i class="align-middle" data-feather="file-plus"></i></a>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EventName</th>
                <th>EventDate</th>
                <th>EventDescription</th>
                <th>EventImageName</th>
                <th>CoordinateLat</th>
                <th>CoordinateLng</th>
                <th>EventSlug</th>
                <th>EventUpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.eventName }}</td>
                <td>{{ event.eventDate ? event.eventDate.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>{{ event.eventDescription }}</td>
                <td>{{ event.eventImageName }}</td>
                <td>{{ event.coordinateLat }}</td>
                <td>{{ event.coordinateLng }}</td>
                <td>{{ event.eventSlug }}</td>
                <td>{{ event.eventUpdatedAt ? event.eventUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_event_show', {'id': event.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="edit-3"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

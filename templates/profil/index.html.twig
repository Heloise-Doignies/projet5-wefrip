{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}

<nav class="nav-fill">
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-info-tab" data-bs-toggle="tab" data-bs-target="#nav-info" type="button" role="tab" aria-controls="nav-info" aria-selected="true">Mon profil</button>
        <button class="nav-link" id="nav-event-tab" data-bs-toggle="tab" data-bs-target="#nav-event" type="button" role="tab" aria-controls="nav-event" aria-selected="false">Mes inscriptions aux évènements</button>
        <button class="nav-link" id="nav-favoris-tab" data-bs-toggle="tab" data-bs-target="#nav-favoris" type="button" role="tab" aria-controls="nav-favoris" aria-selected="false">Mes tutoriels favoris</button>
    </div>
</nav>

<div class="tab-content my-3" id="nav-tabContent">
    {# Début de la zone "mon profil" #}
    <div class="tab-pane fade show active" id="nav-info" role="tabpanel" aria-labelledby="nav-info-tab" tabindex="0">
        <div class="container text-center profilUser p-3 rounded profilInfo">
            <h2>Mes informations</h2>
                <div class="d-flex m-3 w-100 justify-content-evenly align-items-center text-start">
                    <ul class="list">
                        <li class="list-group-item p-1">Email : {{app.user.email}}</li>
                        <li class="list-group-item p-1">Pseudo : 
                        {% if app.user.pseudo is not null %}
                        {{user.pseudo}}
                        {% else %}
                        Non-renseigné
                        {% endif %}
                        </li>
                        <li class="list-group-item p-1">Prénom : 
                        {% if app.user.firstname is not null %}
                        {{user.firstname}}
                        {% else %}
                        Non-renseigné
                        {% endif %}
                        </li>
                        <li class="list-group-item p-1">Nom de famille : 
                        {% if app.user.lastname is not null %}
                        {{user.lastname}}
                        {% else %}
                        Non-renseigné
                        {% endif %}
                        </li>
                        <li class="list-group-item p-1">Mot de passe : ****</li>
                    </ul>

                    <div>
                    {% if app.user.avatarName is not null %}
                    <img src="{{user.avatarName}}" alt="Avatar profil" class="avatar img-fluid rounded-circle shadow avatarProfil"> 
                    {% else %}
                    <img src="/img/user-noavatar.png" alt="Avatar profil" class="avatar img-fluid rounded-circle shadow avatarProfil">
                    {% endif %}
                    </div>
                </div>

        </div>
        {# On affiche le formulaire #}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <a href="{{ path('app_profil_edit') }}"><button type="submit" class="btn btn-primary">Modifier mes informations</button></a>
        </div>
</div>
    {# Fin de la zone "mon profil" #}

    {# Début de la zone "mes événements" #}
    <div class="tab-pane fade" id="nav-event" role="tabpanel" aria-labelledby="nav-event-tab" tabindex="0">
    
        <div class="container text-center profilUser p-3 rounded">
            <h2>Mes inscriptions aux événements</h2>
                <div class="d-flex m-3 w-100 justify-content-evenly align-items-center text-start">

                {% if participantEvent|length > 0 %}
                    <div class="row d-flex justify-content-center">
                        {% for userParticipant in participantEvent %}
                            {% for event in userParticipant.getEvents() %}
                                    <div class="card shadow mb-3">
                                        <div class="card-body text-center ">
                                            <h3>{{event.eventName}}</h3>
                                            <p class="card-text">Date : {{event.eventDate.format('d/m/Y H:i') }}</p>
                                            <p class="card-text">Organisé par : 
                                            {# {% if event.userCreator is user.userName %}
                                            vous ({{event.userCreator}})
                                            {% else %}
                                            {{event.userCreator}}
                                            {% endif %} #}
                                            </p>
                                            <p class="card-text">Informations pratiques : {{event.infosLocation}}</p>
                                        </div>
                                    </div>
                            {% endfor %}
                        {% endfor %} 
                    </div>

                {% else %}
                <p class="text-center">Vous n'avez aucun événement auquel vous participez ou que vous avez créé pour l'instant.</p>

                {% endif %}

                </div>
        </div>
    </div>
    {# Fin de la zone "mes événements" #}

    
    <div class="tab-pane fade" id="nav-favoris" role="tabpanel" aria-labelledby="nav-favoris-tab" tabindex="0">
        <div class="container text-center profilUser p-3 rounded">
            <h2>Mes tutoriels favoris</h2>
                <div class="d-flex m-3 w-100 justify-content-evenly align-items-center text-start">
     {# debut de la zone "mes favori" #}
                {% if app.user.favoris|length > 0 %}
                    <div class="row d-flex justify-content-center mx-3">
                        {% for tutoFavoris in app.user.favoris %}
                            {% for tutorial in tutoFavoris.getTutorials() %}
                            <div class="col-12 col-md-4 col-xl-4 mb-3"> 
                                <div class="card h-100 position-relative">

                                    <div class="position-relative">
                                        {% if  tutorial.tutoImageName is defined and tutorial.tutoImageName is not null  %}
                                        <img src="{{ asset('/img/imageTuto/' ~ tutorial.tutoImageName) }}" class="card-img-top images-tuto" alt="{{tutorial.tutoName}}">
                                        {% else %}
                                        <img src="{{ asset('/img/imageTuto/tuto-noimage.png') }}" class="card-img-top images-tuto" alt="image par défaut">
                                        {% endif %}

                                        {# Une boucle qui dit que : 
                                        si c'est un tuto déjà dans les favoris : bouton poubelle
                                        Sinon (donc pas dans les favoris) : bouton coeur #}
                                        {% if tutoFavoris not in app.user.favoris %}
                                        <a href="{{ path('add_favori', { id: tutorial.id }) }}" class="mt-3 btn btn-danger rounded-circle position-absolute bottom-0 end-0 p-1 m-2 text-light">
                                            <i data-feather="heart"></i>
                                        </a>
                                        {% else %}
                                        <a href="{{ path('remove_favori', { id: tutoFavoris.id }) }}" class="btn btn-danger rounded-circle position-absolute bottom-0 end-0 p-1 m-2 text-light">
                                        <i data-feather="trash"></i>
                                         </a>
                                        {% endif %}
                                    </div>

                                    <a href="{{ path('app_tutorial_show', { tutoSlug: tutorial.tutoSlug }) }}">
                                        <div class="m-3 p-5">
                                            <h2 class="title-tuto">{{ tutorial.tutoName }}</h2>
                                            <p>{{ tutorial.tutoDescription }}</p>
                                        </div>
                                    </a>
                                    
                                    <div class="d-flex gap-5 position-absolute bottom-0 m-4 p-3">
                                        <button type="submit" class="btn btn-primary ">Catégorie</button>
                                        <button type="submit" class="btn btn-warning">{{ tutorial.tutoSupportType }}</button>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                    {% endfor %} 
                    </div>

                {% else %}
                <p class="text-center">Vous n'avez aucun favori pour l'instant.</p>

                {% endif %}

                </div>
        </div>
    </div>

    {# Fin de la zone "mes favoris" #}

</div>

{% endblock %}

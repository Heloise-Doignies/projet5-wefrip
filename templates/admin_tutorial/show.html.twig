{% extends 'base-backend.html.twig' %}

{% block title %}Tutoriels{% endblock %}

{% block body %}
    <h1>Tutoriels</h1>
    <a href="{{ path('app_admin_tutorial_index') }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="skip-back"></i>back</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tutorial.id }}</td>
            </tr>
            <tr>
                <th>TutoName</th>
                <td>{{ tutorial.tutoName }}</td>
            </tr>
            <tr>
                <th>TutoDescription</th>
                <td>{{ tutorial.tutoDescription }}</td>
            </tr>
            <tr>
                <th>TutoFileName</th>
                <td>{{ tutorial.tutoFileName }}</td>
            </tr>
            <tr>
                <th>TutoVideoName</th>
                <td>{{ tutorial.tutoVideoName }}</td>
            </tr>
            <tr>
                <th>TutoImageName</th>
                <td>{{ tutorial.tutoImageName }}</td>
            </tr>
            <tr>
                <th>TutoSupportType</th>
                <td>{{ tutorial.tutoSupportType }}</td>
            </tr>
            <tr>
                <th>TutoSlug</th>
                <td>{{ tutorial.tutoSlug }}</td>
            </tr>
            <tr>
                <th>TutoUpdatedAt</th>
                <td>{{ tutorial.tutoUpdatedAt ? tutorial.tutoUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_tutorial_edit', {'id': tutorial.id}) }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="edit-3"></i>>edit</a>

    {{ include('admin_tutorial/_delete_form.html.twig') }}
{% endblock %}

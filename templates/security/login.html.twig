{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><i data-feather="x-octagon"></i></button>
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Tu es connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
<div class="container m-auto w-50 my-5 rounded py-2 bg-warning" id="register-container">
    <h1 >Connexion</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
    >
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button type="submit" class="btn btn-primary my-3 d-grid gap-2 col-6 mx-auto">Me connecter</button>
    <div id="login-inscrire">
				<p>Tu n'as pas de compte ?
					<a href="{{path('app_register')}}">Inscris-toi.</a>
				</p>
			</div>
</div>
</form>

{% endblock %}

{% extends 'base-backend.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    <a href="{{ path('app_admin_category_index') }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="skip-back"></i>back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>CategoryName</th>
                <td>{{ category.categoryName }}</td>
            </tr>
            <tr>
                <th>CategorySlug</th>
                <td>{{ category.categorySlug }}</td>
            </tr>
            <tr>
                <th>CategoryUpdatedAt</th>
                <td>{{ category.categoryUpdatedAt ? category.categoryUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-primary mb-3"><i class="align-middle" data-feather="edit-3"></i>modifier</a>

    {{ include('admin_category/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}Les tutoriels pour transformer vos vêtements{% endblock %}
{% block body %}
    <h1 class="text-center">Les tutoriels pour transformer vos vêtements</h1>
    <div class="d-flex justify-content-around">
        <button type="submit" class="btn btn-primary m-3">Les plus récents</button>
        <a href="{{ path('app_category') }}">
            <button type="submit" class="btn btn-primary m-3">Voir les catégories</button>
        </a>
    </div>
    {# On affiche toutes les vidéos avec une boucle #}
    <div class="row">
        {% for tutorial in tutorials %}
            <div class="col-4 mb-3">
                <div class="card h-100">
                    <div class="position-relative">
                        {% if tutorial.tutoVideoName is defined and tutorial.tutoImageName is not null %}
                            <img src="{{ asset('/img/imageTuto/' ~ tutorial.tutoImageName) }}" class="card-img-top" alt="tutorial.tutoName">
                        {% else %}
                            <img src="{{ asset('/img/imageTuto/tuto-noimage.png') }}" class="card-img-top" alt="image par défaut">
                        {% endif %}
                        <a href="{{ path('app_home', { id: tutorial.id }) }}" class="mt-3 btn btn-danger rounded-circle position-absolute bottom-0 end-0 p-1 m-2 text-light">
                            <i data-feather="heart"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <a href="{{ path('app_tutorial_show', { tutoSlug: tutorial.tutoSlug }) }}" class="btn btn-primary">{{ tutorial.tutoName }}</a>
                        <p>{{ tutorial.tutoDescription }}</p>
                        <div class="d-flex justify-content-around">
                            <button type="submit" class="btn btn-primary">Catégorie</button>
                            <button type="submit" class="btn btn-warning">{{ tutorial.tutoSupportType }}</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}WeFrip'{% endblock %}

{% block body %}
    <h1>{{ controller_name }}</h1>
    <div id="maCarte"></div>
<button>Ajouter Marker</button>

{# Script pour la carte #}
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
// On initialise la map
var carte = L.map('maCarte').setView([{{ latitude }}, {{ longitude }}], {{ zoom }});
// On charge des tuiles
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    // Liens vers la source des donn√©es
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors',
    minZoom: 1,
    maxZoom: 18,
}).addTo(carte);

{% for marker in markers %}
    L.marker([{{ marker.lat }}, {{ marker.lng }}]).addTo(carte);
{% endfor %}
</script>
{% endblock %}
